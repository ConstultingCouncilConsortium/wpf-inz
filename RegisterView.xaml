<UserControl x:Class="wpf_inz.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F3F4F6">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Background="White" Padding="30" BorderBrush="#E0E0E0" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Rejestracja" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" Margin="0, 0, 0, 20"/>

                <TextBlock Text="Nazwa użytkownika" Margin="0,0,0,5" FontSize="14"/>
                <TextBox Name="UsernameTextBox" Width="250" Height="30" Padding="5" FontSize="14" BorderBrush="#D0D0D0" Background="#F9F9F9" Margin="0,0,0,5" LostFocus="UsernameTextBox_LostFocus"/>
                <TextBlock Name="UsernameError" Foreground="Red" FontSize="12" Margin="0,0,0,5" Visibility="Collapsed"/>

                <TextBlock Text="Adres e-mail" Margin="0,0,0,5" FontSize="14"/>
                <TextBox Name="EmailTextBox" Width="250" Height="30" Padding="5" FontSize="14" BorderBrush="#D0D0D0" Background="#F9F9F9" Margin="0,0,0,5" LostFocus="EmailTextBox_LostFocus"/>
                <TextBlock Name="EmailError" Foreground="Red" FontSize="12" Margin="0,0,0,5" Visibility="Collapsed"/>

                <TextBlock Text="Hasło" Margin="0,0,0,5" FontSize="14"/>
                <PasswordBox Name="PasswordBox" Width="250" Height="30" Padding="5" FontSize="14" BorderBrush="#D0D0D0" Background="#F9F9F9" Margin="0,0,0,5" LostFocus="PasswordBox_LostFocus"/>
                <TextBlock Name="PasswordError" Foreground="Red" FontSize="12" Margin="0,0,0,5" Visibility="Collapsed"/>

                <TextBlock Text="Potwierdź hasło" Margin="0,0,0,5" FontSize="14"/>
                <PasswordBox Name="ConfirmPasswordBox" Width="250" Height="30" Padding="5" FontSize="14" BorderBrush="#D0D0D0" Background="#F9F9F9" Margin="0,0,0,5" LostFocus="ConfirmPasswordBox_LostFocus"/>
                <TextBlock Name="ConfirmPasswordError" Foreground="Red" FontSize="12" Margin="0,0,0,5" Visibility="Collapsed"/>

                <Button Content="Zarejestruj się" Width="220" Height="40" Background="#007BFF" Foreground="White" FontSize="16" BorderBrush="Transparent" HorizontalAlignment="Center" Margin="0,10,0,0" Click="RegisterButton_Click"/>
                <Button Content="Powrót do logowania" Width="220" Height="30" Background="Transparent" Foreground="#007BFF" FontSize="14" BorderBrush="Transparent" HorizontalAlignment="Center" Margin="0,10,0,0" Click="BackToLoginButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
