<Window x:Class="wpf_inz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:wpf_inz"
        Title="Manage.io" Height="1080" Width="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Główna zawartość aplikacji -->
        <ContentControl x:Name="MainContent"/>

        <!-- Powiadomienie w prawym górnym rogu -->
        <Border x:Name="NotificationPanel" Background="#28A745" CornerRadius="5"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,10,10,0" Padding="10,5" Visibility="Collapsed">
            <TextBlock x:Name="NotificationText" Foreground="White" FontSize="14"/>
        </Border>
    </Grid>
</Window>
